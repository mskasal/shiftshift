{
  "name": "Shif-Shift Chrome extension",
  "description": "This extension allows the user to change the tabs with IntellJ style.",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
   "128": "icon128.png"
  },
  "permissions": ["tabs", "activeTab", "storage", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-main.js", "content-extractor.js", "search-box-creater.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
